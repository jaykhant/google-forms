generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["rhel-openssl-1.0.x", "darwin-arm64", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  name      String
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Response  Response[] @relation("UserOfResponse")
  Form      Form[]     @relation("UserOfForm")
}

model Form {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      String
  user        User?       @relation("UserOfForm", fields: [userId], references: [id])
  userId      String?     @db.ObjectId
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  questions   Questions[]
  Response    Response[]  @relation("FormOfResponse")
}

type Questions {
  type     String
  question String
  option   String[]
}

model Response {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User?    @relation("UserOfResponse", fields: [userId], references: [id])
  userId    String?  @db.ObjectId
  form      Form?    @relation("FormOfResponse", fields: [formId], references: [id])
  formId    String?  @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  answer    Answer[]
}

type Answer {
  question String
  answer   String?
  Option   String[]
  fileName String?
  date     DateTime? @db.Date
  time     DateTime?
}
